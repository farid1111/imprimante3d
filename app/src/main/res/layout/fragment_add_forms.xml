<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_form_page_upload_button"
            android:background="@color/brown"
            android:textColor="@color/white"
            android:padding="@dimen/default_margin"
            style="@style/TitleTextStyle" />
        
        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/choco3"
            android:scaleType="centerCrop" />
    </LinearLayout>
    
    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/add_form_page_name_input"
        android:hint="@string/add_form_page_name_input"
        android:layout_marginTop="@dimen/default_margin"
        android:paddingLeft="@dimen/item_margin"
        style="@style/DefaultTextStyle"/>
    
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/add_form_page_confirm_button"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="24dp"
        style="@style/TitleTextStyle"/>
        

</LinearLayout>